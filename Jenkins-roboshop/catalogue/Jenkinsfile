pipeline {
    agent { label 'AGENT-1' }

    environment {
        appVersion = ''
    }

    stages {

        stage('Reading package.json') {
            steps {
                script {
                    // Go to the correct directory
                    dir('Jenkins-roboshop/catalogue') {
                        echo "📦 Reading package.json and installing dependencies..."
                        
                        // Read package.json to get version
                        def packageJson = readJSON file: 'package.json'
                        appVersion = packageJson.version
                        echo "✅ Package version: ${appVersion}"

                        // Install dependencies
                        sh "npm install"
                    }
                }
            }
        }

        stage('Docker Image Build') {
            steps {
                script {
                    echo "🐳 Building Docker image and listing S3 buckets..."
                    
                    // Use AWS credentials and region
                    withAWS(credentials: 'AWS-VICKY-CRED', region: 'us-east-1') {
                        sh '''
                            echo "📂 Listing all S3 buckets..."
                            aws s3 ls
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build completed successfully!"
        }
        failure {
            echo "❌ Build failed!"
        }
        always {
            echo "📌 This is roboshop-project"
        }
    }
}
