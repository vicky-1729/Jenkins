pipeline {
    agent { label 'AGENT-1' }

    options {
        timeout(time: 30, unit: 'MINUTES') // Pipeline will time out after 30 min
        
    }
    environment {
        appVersion = ''
    }

    stages {
        stage('Reading package.json ') {
            steps {
                script {
                    dir('Jenkins-roboshop/catalogue') {
                        echo "Building....!"
                        // Read package.json to get version
                        def packageJson = readJSON file: 'package.json'
                        appVersion = packageJson.version
                        echo "Package version: ${appVersion}"
                        
                        sh """
                            npm install
                        """
                    }
                }
            }
        }

        stage('Docker image Build') {
            steps {
                script {     
                    withAWS(credentials: 'AWS-VICKY-CRED', region: 'us-east-1') {
                        sh """
                            echo "Listing all S3 buckets..."
                            aws s3 ls
                        """
                        
                        // Add Docker build commands here
                        // sh "docker build -t catalogue:${appVersion} ."
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Success..!"
        }
        failure {
            echo "Failure...!"
        }
        always {
            echo "This is roboshop-project"
        }
    }
}
