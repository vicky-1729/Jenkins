pipeline {
    agent { label 'AGENT-1' }

    environment{
        Component = "catalogue"
    }
    stages {
        stage('Build') {
            steps {   
                script{
                        echo "Building....!"
                    sh """
                        npm install
                    """
                }
            }
        }

        stage('Testing') {
            steps {
                script{
                    echo "Testing...!"
                    sh """
                        npm install
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Success..!"
        }
        failure {
            echo "Failure...!"
        }
        always {
            echo "This is roboshop-project"
        }
    }
}
