pipeline {
    agent { label 'AGENT-1' }

    environment {
        appVersion = ''
    }

    stages {
        stage('Build') {
            steps {   
                script{  
                    echo "Building....!"
                    
                    // Check if package.json exists, if not create a dummy one
                    def packageJsonExists = fileExists 'package.json'
                    if (!packageJsonExists) {
                        echo "package.json not found, creating dummy version"
                        writeFile file: 'package.json', text: '{"version": "1.0.0"}'
                    }
                    
                    def packageJson = readJSON file: 'package.json'
                    appVersion = packageJson.version
                    echo "Package version: ${appVersion}"

                    sh """
                        npm install
                    """

                }
            }
        }

        stage('Testing') {
            steps {
                  echo "Testing....!"
            }
        }
    }

    post {
        success {
            echo "Success..!"
        }
        failure {
            echo "Failure...!"
        }
        always {
            echo "This is roboshop-project"
        }
    }
}
